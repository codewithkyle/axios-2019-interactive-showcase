{
  "name": "stream-alerts",
  "version": "0.0.1",
  "description": "A simple framework for building custom stream alerts.",
  "main": "index.html",
  "types": "./app/typescript/global.d.ts",
  "scripts": {
    "dev": "run-p dev:*",
    "dev:typescript": "onchange ./app/typescript/**/*.ts -- npm run compile:typescript",
    "dev:browserify": "onchange ./_compiled/app.js -- npm run compile:browserify",
    "dev:sass": "onchange ./app/sass/**/*.scss -- npm run compile:scss",
    "compile": "npm-run-all compile:*",
    "compile:typescript": "tsc",
    "compile:browserify": "browserify -e ./_compiled/app.js -o ./public/app.js",
    "compile:uglify": "uglifyjs ./public/app.js -c -m -o ./public/app.js",
    "compile:scss": "node-sass ./app/sass/main.scss ./public/main.css --output-style compressed",
    "preview": "http-server -o",
    "lint": "npm-run-all lint:*",
    "lint:typescript": "tslint -c .tslintrc.js -p tsconfig.json -t verbose",
    "lint:scss": "stylelint ./app/sass/**/*.scss --cache"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.scss": "npm run lint:scss",
    "*.ts": "npm run lint:typescript"
  },
  "author": "Kyle Andrews",
  "contributors": [
    "Kyle Andrews (http://codewithkyle.com)"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/socket.io": "^2.1.2",
    "http-server": "^0.11.1",
    "husky": "^1.3.1",
    "install": "^0.12.2",
    "lint-staged": "^8.1.3",
    "node-sass": "^4.11.0",
    "npm": "^6.7.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^5.2.0",
    "stylelint": "^9.10.1",
    "stylelint-config-recommended-scss": "^3.2.0",
    "stylelint-scss": "^3.5.2",
    "tslint": "^5.12.1",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.3.1",
    "uglify-js": "^3.4.9"
  },
  "dependencies": {
    "animejs": "^3.0.1",
    "browserify": "^16.2.3",
    "socket.io": "^2.2.0"
  }
}
